<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BevasarloLista.Views.EditPage"
             x:Uid="szerkesztes"
             Title="{Binding Title}"
             >
    <ContentPage.Content>
        <StackLayout >

            <Entry x:Name="itemName"  Text="{Binding ItemName, Mode=TwoWay}" />
            <Entry x:Name="itemAmount"  Text="{Binding ItemAmount, Mode=TwoWay}" />
            <Picker x:Name="itemAmountTypePicker"  SelectedItem="{Binding ItemAmountType}">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>db</x:String>
                        <x:String>Liter</x:String>
                        <x:String>Kg</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button x:Name="addButton"  Command="{Binding SaveCommand }" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>